{% extends "LeaptAdminBundle::base.html.twig" %}

{% import 'LeaptBootstrapBundle::macros.html.twig' as bootstrap %}

{% datalist_theme datalist '@LeaptCore/Datalist/datalist_tiled_layout.html.twig' %}

{% block main_nav %}{% endblock main_nav %}

{% block body %}
    {% include 'LeaptAdminBundle:Wysiwyg:upload.html.twig' with {'form': uploadForm } %}
    <h2>{{ "wysiwyg.browse.title"|trans({}, 'LeaptAdminBundle') }}</h2>
    <hr/>
    <div class="wysiwyg-browser">
        {% if datalist is empty %}
            {{ bootstrap.alert("wysiwyg.browse.empty"|trans({}, 'LeaptAdminBundle')) }}
        {% endif %}

        {{ datalist_widget(datalist) }}
    </div>
{% endblock %}